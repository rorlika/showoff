<div class="container">
  <div class="row">
    <% if @widgets.to_h[:widgets].blank? %>
        <h3 class="jumbotron-heading">No widgets</h3>
    <% else %>
      <% @widgets.to_h[:widgets].each do |widget| %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <div class="card-body">
              <p class="card-text"><%= widget.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                Owner: <%= link_to widget.user.first_name, user_path(id: widget.user.id) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
