<div class="container" >
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="card-img-top" style="height: 225px; width: 100%; display: block;" src="<%= @user.images[:small_url] %>">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <p class="card-text"><%= @user.first_name %></p>&nbsp;&nbsp;&nbsp;&nbsp;
            <p class="card-text"><%= @user.last_name %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
